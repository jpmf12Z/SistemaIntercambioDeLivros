# Desliga listagem de diret처rios
Options -Indexes

# Define index padr찾o
DirectoryIndex public/index.php

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Se o arquivo ou diret처rio n찾o existir dentro de /public, manda para index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ public/index.php [L]
</IfModule>
